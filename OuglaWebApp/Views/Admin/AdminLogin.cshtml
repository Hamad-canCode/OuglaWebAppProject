@model OuglaWebApp.Models.Info


<head>
    <link href="~/css/loginstylesheet.css" rel="stylesheet" />
</head>

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <form class="login border p-4" method="post" asp-action="AdminLogin" asp-controller="Admin">
            <div class="text-center">
                <h1>Login</h1>
            </div>
            
            <div>
                <label class="form-label">Name: </label>
                <input class="form-control" type="text" asp-for="Ownername" />
                <span asp-validation-for="Ownername" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label">Password: </label>
                <input class="form-control" type="password" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span><br />
            </div>
            <div id="msg">
                <label class="text-danger">@TempData["msg"]</label>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-2" type="submit" value="Log In" />
            </div>

        </form>
    </div>
</div>

