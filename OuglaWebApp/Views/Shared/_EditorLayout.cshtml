@model Content

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OuglaWebApp</title>
    <link href="~/css/editorlayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/OuglaWebApp.styles.css" asp-append-version="true" />
</head>
<body>


    <div class="row">

        <div class="sidebar col-lg-2 col-md-2 col-xl-2 bg-secondary">
            <div class="functioms">
                <form id="editform" class="" method="post" enctype="multipart/form-data" asp-action="EditorContent" asp-controller="Editor">
                    <table>
                        <tr>
                            <td>
                                <label>Logo: </label>
                                <label class="custom-file-upload">
                                    <input type="file" value="Logo" name="logo" id="logo" accept="image/*" title="" />
                                    Upload
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Banner Image: </label>
                                <label class="custom-file-upload">
                                    <input type="file" value="Banner" name="Banner" id="Banner" accept="image/*" title="" />
                                    Upload
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Obj Image: </label>
                                <label class="custom-file-upload">
                                    <input type="file" value="objImg" name="objImg" id="objImg" accept="image/*" title="" />
                                    Upload
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>About Text:</label>
                                <input type="text" asp-for="about" EnableViewState="False" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="" />
                                <input type="text" asp-for="TwitterLink" EnableViewState="False" placeholder="Paste Link" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="" />
                                <input type="text" asp-for="InstagramLink" EnableViewState="False" placeholder="Paste Link" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="" />
                                <input type="text" asp-for="LinkedInLink" EnableViewState="False" placeholderedr="Paste Link" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <button class="round-button" name="#E74C3C" style="background: #E74C3C;"></button>
                                <button class="round-button" name="#9B59B6" style="background: #9B59B6;"></button>
                                <button class="round-button" name="#3498DB" style="background: #3498DB;"></button>
                                <button class="round-button" name="#2ECC71" style="background: #2ECC71;"></button>
                                <button class="round-button" name="#F1C40F" style="background: #F1C40F;"></button>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
            <div class="buttonContainer">
                <input type="submit" class="btn btn-light" value="Editor" href="/@TempData["siteName"]/admin/blogeditor"/>
                <button class="btn btn-light" asp-route="~/@TempData["siteName"]/admin/blogeditor" href="~/@TempData["siteName"]/admin/blogeditor">Editor</button>
                <input type="submit" class="btn btn-primary" value="Publish" form="editform"/>
            </div>
        </div>

        <div class="content container col-lg-9 col-md-9 col-xl-9 bg-light">
            @RenderBody()
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



